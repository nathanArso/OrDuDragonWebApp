<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #sidebar {
            z-index: 1;
            position: fixed;
            width: 0;
            height: 100%;
            overflow-y: hidden;
            background-color: #121519;
        }

        #content {
            color:white;
            height:100%;
            background-color:#2a333c;
            width: 100%;
            position: absolute;
        }
        body {
            background-color:#2a333c;
        }
        @@media screen and (min-width: 720px)
        {
            #wrapper.menuDisplayed #sidebar {
                width: 250px;
            }
            #wrapper.menuDisplayed #content {
                padding-left: 250px;
            }
            .logo {
                margin-left:-25px;
            }
            .big {
                display:inline;
            }
        }
        @@media screen and (max-width: 720px)
        {
            #wrapper.menuDisplayed #sidebar {
                width: 50px;
            }
            #wrapper.menuDisplayed #content {
                padding-left: 50px;
            }
            .big {
                display:none;
            }
            .logo {
                left:-25px;
            }
        }

        .sidebar-nav {
             padding: 0;
             list-style: none;
        }

        .sidebar-nav li {
            text-indent: 20px;
            line-height: 40px;
        }

        .sidebar-nav li a {
            display: block;
            text-decoration: none;
            text-align:left;
            color: #ddd;
        }

        .sidebar-nav li a:hover {
            background-color:dodgerblue;
        }
        footer p{
            text-align:center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <button id="toggle-side-bar" type="button" class="btn btn-primary navbar-btn" aria-label="Left Align">
                    <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Se déconnecter", "LogOut", "Users")</li>
                </ul>

            </div>
        </div>
    </nav>
    <div id="wrapper">
        <div id="sidebar">
            <ul class="sidebar-nav">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <span class="logo glyphicon glyphicon-home" aria-hidden="true"></span>
                        <p class="big">Accuil</p>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("GameData", "Users")">
                        <span class="logo glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <span class="big">Ressources</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Questions")">
                        <span class="logo glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                        <span class="big">Question</span>
                    </a>
                </li>
            </ul>
        </div>
        <div id="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <footer class="container">
                <p>&copy; @DateTime.Now.Year - L'or du dragon</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#toggle-side-bar").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("menuDisplayed");
        });
    </script>
</body>
</html>
