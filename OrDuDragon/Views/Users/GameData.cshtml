
@{
    ViewBag.Title = "GameData";
}
<style>
    .item-image {
        width:120px;
        height:120px;
    }
    .item {
        margin-right:20px;
        margin-bottom:20px;
        padding:10px;
        display:flex;
        width:300px;
        height:120px;
        background-color:darkgray;
    }
    .item-amount {
        position:relative;
        vertical-align:central;
        color:white;
        text-align:right;
    }
</style>
